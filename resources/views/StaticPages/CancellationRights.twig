{% extends getPartial('page-design') %}

{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% block PartialHead %}
    <meta name="description" content="{{ trans('Ceres::Template.cancellationRightsMetaDescription') }}">
    <meta name="robots" content="{{ config("Ceres.meta.robots_cancel_rights") }}">
    <title>{{ trans("Ceres::Template.cancellationRights", {"hyphen": ""}) }} | {{ trans("Ceres::Template.headerCompanyName") }}</title>
{% endblock %}

{% block PageBody %}

    {% set cancellationRights = services.legalInformation.getCancellationRights() %}

    <div class="container-fluid jg-infobar">
	     <div class="d-flex justify-content-center"><span>DESIGN &amp; ENTWICKLUNG IN DEUTSCHLAND</span></div>
     </div>

    <div class="d-none d-sm-block">
      <img src="https://cdn02.plentymarkets.com/vdi6bjgy8ov1/frontend/webshop/gebauede.jpg" style="width:100%"/>
    </div>

    <div class="d-block d-sm-none">
      <img src="https://cdn02.plentymarkets.com/vdi6bjgy8ov1/frontend/webshop/gebauede-xs.jpg" style="width:100%"/>
    </div>

    <div class="container-max page-content contact">
        <div class="row">
            <div class="col-12">
                <br/>
                {% autoescape false %}
                    <h1>{{ trans("Ceres::Template.cancellationRights", {"hyphen": "&shy;"}) }}</h1>
                {% endautoescape %}
                <hr>
                {% if cancellationRights.htmlText %}
                    {{ cancellationRights.htmlText | raw }}
                {% else %}
                    <p class="static-page-plain-text">{{ cancellationRights.plainText }}</p>
                {% endif %}

                {{ LayoutContainer.show("Ceres::StaticPages.CancellationRights") }}
            </div>
        </div>
    </div>


{% endblock %}
